{
    "extends": ["airbnb", "prettier", "plugin:node/recommended-module"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "rules": {
        "prettier/prettier": ["error", { "endOfLine": "auto", "tabWidth": 4 }],
        "no-unused-vars": "warn",
        "no-console": "off",
        "func-names": "off",
        "no-process-exit": "off",
        "object-shorthand": "off",
        "class-methods-use-this": "off",
        "indent": "off"
    },
    "globals": {
        "jest": true
    }
}
